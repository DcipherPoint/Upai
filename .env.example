# .env.example - Rename this file to .env and fill in your actual values

# --- Google Cloud Credentials ---
# Path to your Google Cloud service account key JSON file (for STT)
# Download this from your GCP Console -> IAM & Admin -> Service Accounts
GOOGLE_APPLICATION_CREDENTIALS="path/to/your/steadility-xxxx.json"

# Your Google Cloud Project ID
GCP_PROJECT_ID="your-gcp-project-id"

# Your Gemini API Key (generate from Google AI Studio or Cloud Console)
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# Optional: Specify Gemini model (defaults to gemini-1.5-flash-latest in app.py if not set)
# GEMINI_MODEL_ID="gemini-1.5-flash-latest"

# --- MySQL Database Credentials ---
DB_HOST="localhost" # Or your database server IP/hostname
DB_USER="your_db_user"
DB_PASSWORD="your_db_password"
DB_NAME="smart_care_assistant" # The name of the database you created/will use 